<!doctype html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
</head>
<body>
    <%- include("loader") %>
    <%- include("header", { user: user }) %>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            scroll-behavior: smooth;
        }

        :root {
            --accent: <%= (isOwner && profileUser.customTheme?.accentColor) ? profileUser.customTheme.accentColor : '#7C3AED' %>;
            --secondary: <%= (isOwner && profileUser.customTheme?.secondaryColor) ? profileUser.customTheme.secondaryColor : '#C026D3' %>;
            --cover-gradient: <%= (isOwner && profileUser.customTheme?.coverGradient) ? profileUser.customTheme.coverGradient : 'linear-gradient(135deg, #370080, #7C3AED, #C026D3)' %>;
        }
    </style>

    <main>
        <%- include("dashboardContent", { user: user, profileUser: profileUser, isOwner: isOwner }) %>
    </main>


    <section id="classic-modal" class="modal">
        <span><%= profileUser.username %> اهلا،</span>
    </section>

    </section>

    <%- include("footer") %>
</body>
</html>