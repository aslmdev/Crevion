                    <% } %>

                    <!-- Stats -->
                    <div class="profile-stats">
                        <div class="stat">
                            <div class="stat-value"><%= profileUser.stats?.projects || 0 %></div>
                            <div class="stat-label">ŸÖÿ¥ÿßÿ±Ÿäÿπ</div>
                        </div>
