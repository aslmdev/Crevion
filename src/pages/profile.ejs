        // Follow/Unfollow
        async function toggleFollow() {
            <% if (!user) { %>
                window.location.href = 'https://discord.com/api/oauth2/authorize?client_id=<%= process.env.DISCORD_CLIENT_ID || "1416879488855445536" %>&redirect_uri=<%= encodeURIComponent(process.env.BASE_URL + "/auth/discord") %>&response_type=code&scope=identify%20email';
                return;
            <% } %>

            const btn = document.getElementById('followBtn');
            const text = document.getElementById('followText');
            const icon = document.getElementById('followIcon');
            
            try {
                const response = await fetch('/api/follow/<%= profileUser.username %>', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const data = await response.json();

                if (data.success) {
                    if (data.action === 'followed') {
                        btn.classList.add('following');
                        btn.classList.remove('primary');
                        text.textContent = 'ŸÖÿ™ÿßÿ®Ÿéÿπ';
                        icon.innerHTML = '<path d="M9 11L11 13L15 9" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>';
                        
                        // Update follower count
                        const followerStats = document.querySelectorAll('.stat-card');
                        if (followerStats[1]) {
                            const valueEl = followerStats[1].querySelector('.stat-value-large');
                            if (valueEl) {
                                const currentCount = parseInt(valueEl.textContent);
                                valueEl.textContent = currentCount + 1;
                            }
                        }
                    } else {
                        btn.classList.remove('btn-cover-following');
                        btn.classList.add('btn-cover-primary');
                        text.textContent = 'ŸÖÿ™ÿßÿ®ÿπÿ©';
                        icon.innerHTML = '<path d="M12 5V19M5 12H19" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>';
                        
                        // Update follower count
                        const followerStats = document.querySelectorAll('.stat-card');
                        if (followerStats[1]) {
                            const valueEl = followerStats[1].querySelector('.stat-value-large');
                            if (valueEl) {
                                const currentCount = parseInt(valueEl.textContent);
                                valueEl.textContent = Math.max(0, currentCount - 1);
                            }
                        }
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                alert('ÿ≠ÿØÿ´ ÿÆÿ∑ÿ£ÿå ÿ≠ÿßŸàŸÑ ŸÖÿ±ÿ© ÿ£ÿÆÿ±Ÿâ');
            }
        }

        // Share Profile
        function shareProfile() {
            const title = '<%= profileUser.displayName %> (@<%= profileUser.username %>) - Crevion';
            const text = 'ÿ¥ÿßŸáÿØ ŸÖŸÑŸÅ <%= profileUser.displayName %> ÿπŸÑŸâ Crevion';
            const url = window.location.href;

            if (navigator.share) {
                navigator.share({ title, text, url })
                    .catch(err => console.log('Share cancelled'));
            } else {
                navigator.clipboard.writeText(url).then(() => {
                    // Create a toast notification
                    const toast = document.createElement('div');
                    toast.style.cssText = `
                        position: fixed;
                        bottom: 2rem;
                        right: 2rem;
                        padding: 1rem 2rem;
                        background: linear-gradient(135deg, #22c55e, #16a34a);
                        color: white;
                        border-radius: 12px;
                        font-weight: 700;
                        box-shadow: 0 10px 30px rgba(34, 197, 94, 0.4);
                        z-index: 10000;
                        animation: slideIn 0.3s ease-out;
                    `;
                    toast.textContent = '‚úÖ ÿ™ŸÖ ŸÜÿ≥ÿÆ ÿßŸÑÿ±ÿßÿ®ÿ∑ ÿ®ŸÜÿ¨ÿßÿ≠!';
                    document.body.appendChild(toast);
                    
                    setTimeout(() => {
                        toast.style.animation = 'slideOut 0.3s ease-out';
                        setTimeout(() => toast.remove(), 300);
                    }, 3000);
                });
            }
        }

        // Add smooth scroll behavior
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Stat cards hover effect
        document.querySelectorAll('.stat-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px) scale(1.05)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Add animations CSS
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from {
                    transform: translateX(400px);
                    opacity: 0;
                }
                to {
                    transform: translateX(0);
                    opacity: 1;
                }
            }
            @keyframes slideOut {
                from {
                    transform: translateX(0);
                    opacity: 1;
                }
                to {
                    transform: translateX(400px);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
